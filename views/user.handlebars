{{!< layout}} <div class="grid grid-cols-12 gap-4 w-11/12 ml-auto mr-auto">
  <div id="interact_box"class="col-span-7">
    <br />
    <h4 class="text-center text-3xl text-purple-800 font-bold mb-6"><i class="fa fa-solid fa-user mr-2"></i>{{user.name}}'s Posts:</h4>
    <div class="border-4 border-purple-800 mt-2 rounded-xl">
      {{#each posts as |post| }}
      <div class="border-2 border-pink-900 rounded-lg m-2 p-2 flex gap-4">
        {{!-- cd --}}
        <div class="cd-case pr-6">
          <div class="album-art">
            <img src="{{post.cover_img}}" />
          </div>
          <div class="spine"></div>
        </div>
        {{!-- cd end --}}
        <div class="ml-10 w-auto h-auto">
          <h3 class="text-lg font-bold underline">{{post.title}}</h3>
          <span>{{post.content}}</span>
          <br />
          <small class="text-xs text-pink-900"><i class="fa fa-solid fa-pen-to-square mr-2 mb-2"></i>Post created on {{formatDate post.createdAt}}</small>
          <br />
          <span><button class="likebtn heart-btn bg-pink-500 text-white py-1 px-2 rounded-lg text-xs mb-2" type="submit" data="{{post.id}}" data-count="{{post.upvotes}}" >
            <i class="fa fa-heart"></i>
            {{post.upvotes}} upvotes 
          </button></span>
           <button class="linkbtn bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded text-xs mb-2" type="submit" data="{{post.id}}">
            Go to Post
          </button>
          <button class="spotifybtn bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 rounded text-xs"
              type="button" data="{{post.spotify_id}}">View on Spotify</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>


  <!-- Personal Account Info Card -->
  <div class="col-span-5">
    <div class="flex items-center justify-center">
      <div class="bg-white w-full mt-10 rounded-xl border">
        <div class="flex items-center justify-center pt-10 flex-col">
          <img
            src="https://st3.depositphotos.com/4111759/13425/v/600/depositphotos_134255710-stock-illustration-avatar-vector-male-profile-gray.jpg"
            class="rounded-full w-32">
          <h1 class="text-gray-800 font-semibold text-xl mt-5">{{user.name}}</h1>
          <h1 class="text-gray-500 text-sm">{{user.location}}</h1>
          <h1 class="text-gray-500 text-sm p-4 text-center">{{user.bio}}</h1>
        </div>
        <div class="flex justify-between p-4">
          <div>
            <h1 class="text-sm font-semibold uppercase text-black-500">{{posts.length}} Playlists Uploaded</h1>
