{{!< layout}} 

<div class="grid grid-cols-12 gap-4 w-11/12 ml-auto mr-auto flex-row mt-4 px-4">
  <div class="col-span-7">
    <h4 class="text-xl font-bold mb-2">Trending playlists</h4>
    <div class="main-border mt-2 " id="trending_playlists">
      {{#each posts as |post| }}
      
      <div class="primary-container flex gap-4 mt-2 ml-2 mr-2 mb-2">

        {{!-- cd --}}
        <div class="HomeCd-case pr-6">
          <div class="HomeAlbum-art">
            <img src="{{post.cover_img}}" />
          </div>
          <div class="HomeSpine"></div>
        </div>
        {{!-- cd end --}}

        <div class="postText-container mt-2">
          <h3 class="text-lg font-bold">{{post.title}}</h3>
          <span>{{post.content}}</span>
          <br />
          <small>Post created on {{formatDate post.createdAt}}</small>
          <small><i>{{post.post_type}}</i></small>
          <br>
          <br>
          {{!-- heart button. Like and unlike --}}
          <button class="heart-btn bg-pink-500 text-white py-1 px-2 rounded-lg text-xs">
          <i class="fa fa-heart"></i>
          <span class="icon">Love</span>
          </button> 
          <button class="linkbtn bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded mt-2 text-xs" type="submit" data="{{post.id}}">Go to Post</button>

          {{!-- heart button end --}}

          <div class="box-container mt-2 border border-black">
            <div class="box p-4">
              <form class="commentbox">
                <textarea class="commentbox w-full h-24 border-2 rounded-lg resize-none" placeholder="Type your comment here"></textarea>
                <button class="commentbtn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-2" type="submit" data="{{post.id}}">Post Comment</button>
              </form>
            </div>
          </div>

        </div>
      </div>
      
      {{/each}}
    </div>
  </div>
  <div class="col-span-5 ml-4">
    <h2 class="text-xl font-bold mb-2">Post Tags</h2>
    <div class="border border-pink-600 mt-2 h-64 bg-pink-100 rounded-lg p-4">
      <h4 class="text-lg font-bold mb-2 text-pink-800">Click on these Tags to View Posts Related to Topics:</h4>
      <p class="text-pink-600">#Rap, #Rock, #Indie, #Alternative</p>
    </div>
    <h4 class="text-lg font-bold mb-2 mt-4">Recent Activity</h4>
    <div class="border border-pink-600 mt-2 h-64 bg-pink-100 rounded-lg p-4">
      <p class="text-pink-600">Content</p>
    </div>
  </div>
</div>



  <script src="/js/animation.js"></script>
    <script src="/js/addcomment.js"></script>